@model LapTrinhWeb.Models.ViewModel.RegisterVM

@{
    ViewBag.Title = "Cập Nhật Thông Tin";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h2>Cập Nhật Thông Tin</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("UpdateProfile", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Họ tên</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%", @placeholder = "Nhập Họ tên" } })
                @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerPhone, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%", @placeholder = "Nhập Số điện thoại" } })
                @Html.ValidationMessageFor(model => model.CustomerPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerEmail, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%", @placeholder = "Nhập Email" } })
                @Html.ValidationMessageFor(model => model.CustomerEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Địa chỉ</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerAddress, new { htmlAttributes = new { @class = "form-control", @style = "width: 40%", @placeholder = "Nhập Địa chỉ" } })
                @Html.ValidationMessageFor(model => model.CustomerAddress, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Cập Nhật</button>
    <a href="@Url.Action("ProfileInfo", "Account")" class="btn btn-secondary">Hủy</a>
}


